<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e9ec"
    android:orientation="vertical"
    tools:context=".Request_club_profile">


    <include
        android:id="@+id/clubr_profile_layout"
        layout="@layout/app_bar_layout" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"

            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@color/greyPrimary"
                tools:srcCompat="@tools:sample/backgrounds/scenic[2]" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="55dp"
                app:cardCornerRadius="70dp"

                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="145dp"
                    android:layout_height="145dp"
                    android:layout_gravity="center"
                    android:padding="1dp"
                    android:src="@drawable/use" />

            </com.google.android.material.card.MaterialCardView>


            <ImageButton
                android:id="@+id/profile_pencil"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="125dp"
                android:layout_marginRight="20dp"
                android:background="#fff"
                android:src="@drawable/pencil"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/c_rating"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="125dp"
                android:background="@drawable/round_corne"
                android:drawableRight="@drawable/black_star_dp"
                android:fontFamily="@font/comfortaa_bold"
                android:gravity="center"
                android:padding="5dp"
                android:text="4.5"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/c_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="220dp"
                android:fontFamily="@font/montserrat"
                android:text="Connecting - 4"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/club_profile_c_catagory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="250dp"
                android:fontFamily="@font/roboto"
                android:text="Literature"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/club_profile_c_collage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="280dp"
                android:fontFamily="@font/roboto"
                android:text="GGITS"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/club_profile_c_bio"
                android:layout_width="335dp"
                android:layout_height="58dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="310dp"
                android:text="When you want to make your life feel better and your thoughts more positiveâ€¦"
                android:textAlignment="viewStart"
                android:textColor="@color/back" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/club_profile_c_catagory"
                android:layout_marginTop="70dp"
                android:background="#f2f6f9"

                >


