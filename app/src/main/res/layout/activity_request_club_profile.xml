                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="35dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Soumya Dubey"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/leader_contact"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/montserrat"
                            android:text="soumyaduber12@gmail.com"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="85dp"
                            android:src="@mipmap/ch" />

                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="85dp"
                            android:text="Club Faculty Coordinator"
                            android:textColor="#000"
                            android:fontFamily="@font/comfortaa_bold"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/coordinator_name"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="112dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Coordinatoe name"
                            android:textSize="14sp" />


                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardview_members"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="275dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:src="@mipmap/ch" />

                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:text="Club Members"
                            android:textColor="#000"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/club_member_one"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="35dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Club Member One"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/club_member_two"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="60dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Club Member Two"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/club_memeber_three"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="85dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Club Member Three"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="250dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="115dp"
                            android:background="#000" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="125dp"
                            android:src="@mipmap/ch" />

                        <TextView
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="125dp"
                            android:fontFamily="@font/comfortaa_bold"
                            android:text="Club Contact"
                            android:textColor="#000"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/club_contact"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="65dp"
                            android:layout_marginTop="145dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Enter two contact no in single line"
                            android:textSize="12sp" />


                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/c_p_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="455dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/r2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@mipmap/ch" />

                                <TextView
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="65dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/comfortaa_bold"
                                    android:text="Club Description"
                                    android:textColor="#000"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/club_profile_c_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="65dp"
                                    android:layout_marginTop="30dp"
                                    android:fontFamily="@font/montserrat"
                                    android:padding="5dp"
                                    android:text="An an valley indeed so no .provided declared. He many kept on draw lain song as same. Whether at dearest certain spirits is entered in to."
                                    android:textSize="13sp" />


                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_margin="10dp"
                                    android:src="@mipmap/ch" />

                                <TextView
                                    android:layout_width="230dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="65dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/comfortaa_bold"
                                    android:text="Club Advantages"
                                    android:textColor="#000"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/club_profile_c_benifit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="65dp"
                                    android:layout_marginTop="30dp"
                                    android:fontFamily="@font/montserrat"
                                    android:padding="5dp"
                                    android:text="An an valley indeed so no .provided declared. He many kept on draw lain song as same. Whether at dearest certain spirits is entered in to."
                                    android:textSize="13sp" />


                            </RelativeLayout>

                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>


                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>