<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:layout_margin="3dp"
    app:cardElevation="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/r_c_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ch" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/r_c_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="Connecting-4"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/r_C_catagory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="Literature"
                    android:textColor="@color/back"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/r_c_collage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="GGITS"
                    android:textColor="@color/back2"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/l1"
            android:layout_margin="3dp"
            android:background="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v1"
            android:gravity="center"
            android:id="@+id/l2"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/btn_g_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/round_corne"
                android:fontFamily="@font/comfortaa_bold"
                android:padding="5dp"
                android:text="Get Detail"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:textColor="#000"

                />






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/club_approved_tv"
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:layout_marginTop="128dp"
                android:background="@color/back2"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Club Approved"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:visibility="invisible"

                />



        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>