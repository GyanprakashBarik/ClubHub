<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:minWidth="300dp"
    android:orientation="vertical"
    tools:context=".ForgetPassword">

        <View
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/ic_password"
            android:tint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:paddingStart="10dp"
            android:paddingTop="10sp"
            android:text="Forgot"
            android:textColor="@color/greyPrimaryDark"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:paddingStart="10dp"
            android:paddingBottom="10sp"

            android:text="Password"
            android:textColor="@color/greyPrimaryDark"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:padding="10sp"
            android:layout_margin="10dp"
            android:text="Please type your registered email address in the field mentioned below"
            android:textColor="@color/greyPrimaryDark"
            android:textSize="12sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            android:hint="user2@gmail.com"
            android:layout_margin="10dp"
            android:id="@+id/forget_email"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:fontFamily="@font/comfortaa_bold"
            android:paddingVertical="10dp"
            android:textSize="13sp"
            android:text="Send Reset Link"
            android:id="@+id/send_link_btn"
            android:textColor="#fff" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

    </LinearLayout>


